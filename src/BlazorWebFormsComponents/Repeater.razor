@inherits BaseModelBindingComponent<dynamic>

@if (Visible && Enabled)
{

	@HeaderTemplate

	@if (Items?.Any() ?? false)
	{

		var counter = 0;
		@foreach (object item in Items)
		{
			counter++;
			<CascadingValue Name="CurrentDataBoundItem" Value="item">
				@if (AlternatingItemTemplate == null || counter % 2 == 0)
				{
					@ItemTemplate(item)
				}
				else
				{
					@AlternatingItemTemplate(item)
				}

				@if (SeparatorTemplate != null)
				{
					@SeparatorTemplate
				}

			</CascadingValue>
		}
	}

	@FooterTemplate

}
